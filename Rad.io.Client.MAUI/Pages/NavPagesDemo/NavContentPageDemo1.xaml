             x:Class="Rad.io.Client.MAUI.Pages.NavPagesDemo.NavContentPageDemo1"
             Title="NavContentPageDemo1"
             BackgroundColor="#3d85c6">
    <VerticalStackLayout>
        <Label 
            Text="This is Content Page 1!"
            FontSize="Title"
            FontAttributes="Bold"
            Margin="20"
            TextColor="White"
