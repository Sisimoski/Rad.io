<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rad.io.Client.MAUI.Pages.NowPlayingPage"
             xmlns:viewmodel="clr-namespace:Rad.io.Client.MAUI.ViewModels"
             x:DataType="viewmodel:NowPlayingViewModel"
             Title="NowPlayingPage">
    <VerticalStackLayout Margin="20" Spacing="20">
        <Label x:Name="RadioNameLabel"
               Text="{Binding Name}"
               BackgroundColor="{StaticResource Blue100Accent}"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

        <Button Text="Play" Clicked="Button_Clicked"/>
        <Button Text="Stop"/>
    </VerticalStackLayout>
</ContentPage>
