<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rad.io.Client.MAUI.Pages.NowPlayingPage"
             xmlns:viewmodel="clr-namespace:Rad.io.Client.MAUI.ViewModels"
             xmlns:views="clr-namespace:Rad.io.Client.MAUI.Views"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="viewmodel:NowPlayingViewModel"
             Title="NowPlayingPage">
    <VerticalStackLayout Margin="20" Spacing="10">
        <Frame BorderColor="AliceBlue">
            <Grid RowDefinitions="Auto, *, Auto">
                <Label Text="Details"
                       Grid.Row="0"
                       Grid.Column="0"/>
                <Grid Grid.Row="1">
                    <VerticalStackLayout>
                        <Label Text="{Binding CurrentStation.Name}"/>
                        <Label Text="{Binding CurrentStation.Url}"/>
                    </VerticalStackLayout>
                    
                </Grid>
                <Grid Grid.Row="2">
                    <Label Text="{Binding CurrentStation.Codec}"/>
                </Grid>
                

            </Grid>


        </Frame>
        <views:NowPlayingPanel/>
    </VerticalStackLayout>
</ContentPage>
