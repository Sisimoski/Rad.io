<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rad.io.Client.MAUI.Pages.ExploreCountriesPage"
             xmlns:viewmodel="clr-namespace:Rad.io.Client.MAUI.ViewModels"
             xmlns:radios="clr-namespace:RadioBrowser.Models;assembly=RadioBrowser"
             x:DataType="viewmodel:ExploreCountriesViewModel"
             Title="ExploreCountriesPage">
    <Grid RowDefinitions="Auto, Auto">
        <Entry Grid.Row="0" Placeholder="Search"/>
        <CollectionView x:Name="CountriesList" Grid.Row="1" SelectionMode="Single" ItemsSource="{Binding Countries}" SelectedItem="{Binding SelectedItem}" SelectionChangedCommand="{Binding NavigateTo}">
            <CollectionView.EmptyView>
                <Label Text="Loading..."/>
            </CollectionView.EmptyView>
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="1" VerticalItemSpacing="5"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="radios:NameAndCount">
                    <VerticalStackLayout VerticalOptions="CenterAndExpand" BackgroundColor="{StaticResource Secondary}">
                        <Label VerticalOptions="CenterAndExpand" Text="{Binding Name}" TextColor="{StaticResource Gray900}"/>
                        <Label VerticalOptions="CenterAndExpand" Text="{Binding Stationcount}" TextColor="{StaticResource Gray600}"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
